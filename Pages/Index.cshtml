@page
@model EventRegistration.Pages.IndexModel
@{
    ViewData["Title"] = "Event Registration System";
}

<h1>Events List</h1>

<p>
    <a asp-page="./Create">Add Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Venue</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.EventTime.ToString("hh\\:mm")</td>
                <td>@item.Venue</td>
                <td><a asp-page="./Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-page="./Register" asp-route-id="@item.Id">Register</a></td>
                <td>
                    <a asp-page="./Index" 
                       asp-route-id="@item.Id" 
                       onclick="return confirm('Are you sure you want to delete this?')"
                       asp-page-handler="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>