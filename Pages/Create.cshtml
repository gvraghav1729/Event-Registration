@page
@model EventRegistration.Pages.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<h1>Create New Event</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Event.Name"></label>
        <input asp-for="Event.Name" class="form-control" />
        <span asp-validation-for="Event.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.EventDate"></label>
        <input asp-for="Event.EventDate" class="form-control" type="date" />
        <span asp-validation-for="Event.EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.EventTime"></label>
        <input asp-for="Event.EventTime" class="form-control" type="time" />
        <span asp-validation-for="Event.EventTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Venue"></label>
        <input asp-for="Event.Venue" class="form-control" />
        <span asp-validation-for="Event.Venue" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>